---
// src/pages/resources.astro
import MainLayout from '../layouts/MainLayout.astro';
---

<MainLayout title="AARBAA Shop - Coming Soon">
  <section class="shop-coming-soon">
	<div class="container">
	  <div class="row align-items-center">
		<div class="col-lg-6 text-content">
		  <div class="badge bg-danger mb-3">TOTAL DOMINATION INCOMING</div>
		  <h1 class="display-4 mb-4">CRUSH CYCLIST <br>ENTITLEMENT</h1>
		  
		  <p class="lead mb-4">Prepare for an arsenal of merch that speaks louder than a cyclist's ego. We're loading up weapons of mass mockery.</p>
		  
		  <div class="features mb-5">
			<div class="feature">
			  <i class="fas fa-shield-alt text-danger"></i>
			  <span>CERTIFIED ROAD WARRIOR GEAR</span>
			</div>
			<div class="feature">
			  <i class="fas fa-tshirt text-danger"></i>
			  <span>DESIGNS THAT TRIGGER CYCLISTS</span>
			</div>
			<div class="feature">
			  <i class="fas fa-truck text-danger"></i>
			  <span>NATIONWIDE TAKEDOWN DELIVERY</span>
			</div>
		  </div>
		  
		  <form id="notify-form" class="notify-form">
			<div class="input-group">
			  <input type="email" class="form-control" placeholder="JOIN THE RESISTANCE" required>
			  <button type="submit" class="btn btn-danger">MOBILIZE</button>
			</div>
		  </form>
		</div>
		
		<div class="col-lg-6 visual-content">
		  <div class="shop-mockup">
			<div class="mockup-item"></div>
			<div class="mockup-item"></div>
			<div class="mockup-item"></div>
		  </div>
		</div>
	  </div>
	</div>
  </section>
</MainLayout>

<style>
  .shop-coming-soon {
	min-height: calc(100vh - 250px);
	display: flex;
	align-items: center;
	background-color: #f8f9fa;
	overflow: hidden;
	position: relative;
  }

  .text-content {
	z-index: 10;
	position: relative;
  }

  .text-content h1 {
	font-family: 'Bebas Neue', sans-serif;
	color: #333;
	line-height: 1.2;
	text-transform: uppercase;
	letter-spacing: 2px;
  }

  .features {
	display: flex;
	gap: 20px;
	margin-top: 30px;
  }

  .feature {
	display: flex;
	align-items: center;
	gap: 10px;
	color: #666;
	text-transform: uppercase;
	font-weight: bold;
  }

  .feature i {
	font-size: 1.5rem;
  }

  .notify-form {
	max-width: 500px;
  }

  .notify-form .form-control {
	text-transform: uppercase;
	letter-spacing: 1px;
  }

  .visual-content {
	position: relative;
  }

  .shop-mockup {
	display: flex;
	justify-content: center;
	gap: 20px;
	position: relative;
  }

  .mockup-item {
	width: 200px;
	height: 300px;
	background-color: #e9ecef;
	border-radius: 10px;
	transform: perspective(1000px) rotateY(-15deg);
	box-shadow: -10px 10px 20px rgba(0,0,0,0.1);
	position: relative;
	overflow: hidden;
  }

  .mockup-item::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	height: 50px;
	background-color: #dc3545;
	opacity: 0.7;
  }

  .mockup-item:nth-child(2) {
	transform: perspective(1000px) rotateY(0);
	top: -30px;
	z-index: 10;
  }

  .mockup-item:nth-child(3) {
	transform: perspective(1000px) rotateY(15deg);
  }

  @media (max-width: 991px) {
	.shop-mockup {
	  display: none;
	}
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
	const form = document.getElementById('notify-form');
	
	form.addEventListener('submit', (e) => {
	  e.preventDefault();
	  const emailInput = form.querySelector('input[type="email"]');
	  
	  if (emailInput.value) {
		alert("Thanks for joining the resistance! We'll notify you when the shop launches.");
		emailInput.value = '';
	  }
	});

	// Handle all navigation links to return to homepage
	const navLinks = document.querySelectorAll('nav .navbar-nav a');
	
	navLinks.forEach(link => {
	  link.addEventListener('click', (e) => {
		// Check if not on homepage
		if (window.location.pathname !== '/') {
		  e.preventDefault();
		  window.location.href = '/';
		}
	  });
	});
  });
</script>